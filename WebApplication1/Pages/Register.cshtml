@page
@model WebApplication1.Pages.RegisterModel

<!DOCTYPE html>
<html>
<head>
    <title>Registration Page</title>
</head>
<body>
    <h2>Registration Form</h2>

    <form method="post">
        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ConsultationDate">Desired Consultation Date:</label>
            <input asp-for="ConsultationDate" type="date" class="form-control" />
            <span asp-validation-for="ConsultationDate" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Product">Product:</label>
            <select asp-for="Product" class="form-control">
                <option value="">Choose a product</option>
                <option value="JavaScript">JavaScript</option>
                <option value="C#">C#</option>
                <option value="Java">Java</option>
                <option value="Python">Python</option>
                <option value="Basics">Basics</option>
            </select>
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>

        <button type="submit">Register</button>
    </form>
</body>
</html>

